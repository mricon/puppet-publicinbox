# MANAGED BY PUPPET
<% if @nntpserver -%>
[publicinbox]
<% if @nntpserver.class == Array -%>
<% @nntpserver.each do |srvaddr| -%>
    nntpserver=<%= srvaddr %>
<% end -%>
<% else -%>
    nntpserver=<%= @nntpserver %>
<% end -%>
<% end -%>

<% @lists.keys.sort.each do |listname| -%>
[publicinbox "<%= listname %>"]
<% @lists[listname].each do |paramname, paramvalue| -%>
<% if paramvalue.class == Array -%>
<% paramvalue.each do |_paramvalue| -%>
    <%= paramname %>=<%= _paramvalue %>
<% end -%>
<% else -%>
    <%= paramname %>=<%= paramvalue %>
<% end -%>
<% end -%>
<% end -%>

<% if @watch -%>
[publicinboxwatch]
<% @watch.each do |paramname, paramvalue| -%>
    <%= paramname %>=<%= paramvalue %>
<% end -%>
<% end -%>
