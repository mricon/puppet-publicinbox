# MANAGED BY PUPPET
[publicinbox]
<% if @nntpserver -%>
<% if @nntpserver.class == Array -%>
<% @nntpserver.each do |srvaddr| -%>
    nntpserver=<%= srvaddr %>
<% end -%>
<% else -%>
    nntpserver=<%= @nntpserver %>
<% end -%>
<% end -%>
<% if @css -%>
<% if @css.class == Array -%>
<% @css.each do |cssopts| -%>
    css=<%= cssopts %>
<% end -%>
<% else -%>
    css=<%= @css %>
<% end -%>
<% end -%>
<% if @maileditor -%>
    mailEditor=<%= @maileditor %>
<% end -%>
<% if @wwwlisting -%>
    wwwlisting=<%= @wwwlisting %>
<% end -%>
<% if @global -%>
<% @global.each do |paramname, paramvalue| -%>
    <%= paramname %>=<%= paramvalue %>
<% end -%>
<% end -%>

<% if @watch -%>
[publicinboxwatch]
<% @watch.each do |paramname, paramvalue| -%>
    <%= paramname %>=<%= paramvalue %>
<% end -%>
<% end -%>
